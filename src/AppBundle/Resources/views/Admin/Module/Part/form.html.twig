{% extends '@App/base.html.twig' %}

{% block body %}
    <div class="container">
        {{ form_start(form) }}
        <div class="row valign-wrapper">
            <div class="col s6">
                <h2>Modul-Teil</h2>
            </div>
            <div class="col s6 valign right-align">
                <a href="{{ path('admin.module.index') }}" class="btn waves-effect waves-light red">Abbrechen
                    <i class="material-icons right">not_interested</i>
                </a>
                &nbsp;
                <button name="submit" class="btn waves-effect waves-light" type="submit">Speichern
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                {{ form_widget(form) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function() {
            $('select').material_select();
        });
    </script>
{% endblock %}