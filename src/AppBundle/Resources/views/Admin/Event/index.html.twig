{% extends '@App/base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row valign-wrapper">
            <div class="col s6">
                <h2>Events</h2>
            </div>
            <div class="col s6 valign right-align">
                <a href="{{ path('admin.event.create') }}" class="btn waves-effect waves-light">Hinzuf√ºgen</a>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <table class="responsive-table bordered highlight">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Start</th>
                        <th>Ende</th>
                        <th>Aktion</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for event in events %}
                        <tr>
                            <td><a href="{{ path('admin.event.show', {id: event.id}) }}">{{ event.name }}</a></td>
                            <td><a href="{{ path('admin.event.show', {id: event.id}) }}">{{ event.startDate.format('d.m.Y - H:i') }}</a></td>
                            <td><a href="{{ path('admin.event.show', {id: event.id}) }}">{{ event.endDate.format('d.m.Y - H:i') }}</a></td>
                            <td>
                                <a href="{{ path('admin.event.show', {id: event.id}) }}"><i class="material-icons">visibility</i></a>
                                <a href="{{ path('admin.event.edit', {id: event.id}) }}"><i class="material-icons">mode_edit</i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
